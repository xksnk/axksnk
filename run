#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to log messages
log() {
    echo -e "${BLUE}[$(date '+%Y-%m-%d %H:%M:%S')]${NC} $1"
}

# Function to show help
show_help() {
    echo "üöÄ Quick Deploy Tool for axksnk ‚Üí xksnk"
    echo
    echo "Usage: ./run [COMMAND]"
    echo
    echo "Commands:"
    echo "  deploy   - Full deployment (sync + commit + push) (default)"
    echo "  sync     - Sync files only (no git operations)"
    echo "  status   - Show current status"
    echo "  monitor  - Monitor for changes and auto-sync"
    echo "  help     - Show this help"
    echo
    echo "Examples:"
    echo "  ./run        # Full deployment (default)"
    echo "  ./run deploy # Full deployment"
    echo "  ./run sync   # Sync files only"
    echo "  ./run status # Check status"
    echo "  ./run monitor # Monitor for changes"
}

# Function to run the main script
run_deploy_script() {
    local command="$1"
    local script_path="./deploy_sh/deploy_to_xksnk.sh"
    
    if [ ! -f "$script_path" ]; then
        log "${RED}‚ùå Main script not found:${NC} $script_path"
        return 1
    fi
    
    if [ ! -x "$script_path" ]; then
        log "${YELLOW}Making script executable...${NC}"
        chmod +x "$script_path"
    fi
    
    log "${GREEN}üöÄ Running deployment script...${NC}"
    "$script_path" "$command"
    
    if [ $? -eq 0 ]; then
        log "${GREEN}‚úÖ Operation completed successfully!${NC}"
    else
        log "${RED}‚ùå Operation failed!${NC}"
        return 1
    fi
}

# Main script logic
case "${1:-deploy}" in
    "deploy")
        run_deploy_script "deploy"
        ;;
    "sync")
        run_deploy_script "sync"
        ;;
    "status")
        run_deploy_script "status"
        ;;
    "monitor")
        run_deploy_script "monitor"
        ;;
    "help"|"-h"|"--help")
        show_help
        ;;
    *)
        log "${RED}‚ùå Unknown command:${NC} $1"
        show_help
        exit 1
        ;;
esac 