#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to log messages
log() {
    echo -e "${BLUE}[$(date '+%Y-%m-%d %H:%M:%S')]${NC} $1"
}

# Function to show help
show_help() {
    echo "üöÄ Quick Deploy Tool for prompt-builder.html"
    echo
    echo "Usage: ./run [COMMAND]"
    echo
    echo "Commands:"
    echo "  deploy    - Deploy to GitHub (default)"
    echo "  sync      - Sync file only"
    echo "  status    - Show git status"
    echo "  monitor   - Start file monitoring"
    echo "  server    - Start web server"
    echo "  help      - Show this help"
    echo
    echo "Examples:"
    echo "  ./run deploy  # Deploy to GitHub"
    echo "  ./run sync    # Sync file only"
    echo "  ./run status  # Check status"
}

# Function to deploy
deploy() {
    log "${GREEN}üöÄ Starting deployment...${NC}"
    ./deploy.sh deploy
    if [ $? -eq 0 ]; then
        log "${GREEN}‚úÖ Deployment completed successfully!${NC}"
    else
        log "${RED}‚ùå Deployment failed!${NC}"
    fi
}

# Function to sync
sync() {
    log "${GREEN}üìÅ Syncing file...${NC}"
    ./file-sync.sh sync
    if [ $? -eq 0 ]; then
        log "${GREEN}‚úÖ File synced successfully!${NC}"
    else
        log "${RED}‚ùå Sync failed!${NC}"
    fi
}

# Function to show status
status() {
    log "${GREEN}üìä Checking status...${NC}"
    ./deploy.sh status
}

# Function to start monitoring
monitor() {
    log "${GREEN}üëÄ Starting file monitoring...${NC}"
    log "Press Ctrl+C to stop"
    ./file-sync.sh monitor
}

# Function to start server
server() {
    log "${GREEN}üåê Starting web server...${NC}"
    log "Server will be available at: http://localhost:8000"
    log "Press Ctrl+C to stop"
    python3 server.py
}

# Main script logic
case "${1:-deploy}" in
    "deploy")
        deploy
        ;;
    "sync")
        sync
        ;;
    "status")
        status
        ;;
    "monitor")
        monitor
        ;;
    "server")
        server
        ;;
    "help"|"-h"|"--help")
        show_help
        ;;
    *)
        log "${RED}‚ùå Unknown command:${NC} $1"
        show_help
        exit 1
        ;;
esac 